<h2>Follow Users</h2>
 <% if @users.exists? %>
    <table class="table tabel-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.following.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>