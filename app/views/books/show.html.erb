<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table tabel-hover table-inverse">
        <tbody>
          <tr>
            <td>
            <%= attachment_image_tag @book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %><br />
            <%= link_to "#{@book.user.name}", user_path(@book.user.id) %>
            </td>
            <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit" , edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy" , book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %></td>
            <% elsif @book.favorited_by?(current_user)  %>
              <td>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                <span class="like-btn">♥<%= @book.favorites.count %></span>
                <% end %>
              </td>
              <td>
                コメント数<%= @book.book_comments.count %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(@book), method: :post do %>
                <span class="unlike-btn">♥<%= @book.favorites.count %></span>
                <% end %>
              </td>
              <td>
                コメント数<%= @book.book_comments.count %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      
      <table class="table tabel-hover table-inverse">
        <tbody>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= attachment_image_tag book_comment.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %><br />
              <%= link_to "#{book_comment.user.name}", user_path(book_comment.user.id) %></td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user.id == current_user.id %>
              <td>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbpdy>
      </table>
      
      <div>
        <%= form_with model:[@book, @book_comment], local: true do |f| %>
        <p class="form-group">
          <%= f.text_area :comment, row: '5', class: "form-control"%>
        </p>
        <p class="actions">
          <%= f.submit "送信" %>
        </p>
        <% end %>
      </div>
      
    </div>
  </div>
</div>